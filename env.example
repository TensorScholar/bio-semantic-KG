# Medical Aesthetics Extraction Engine - Environment Configuration
# Copy this file to .env and update the values

# Application Configuration
APP_NAME=Medical Aesthetics Extraction Engine
APP_VERSION=1.0.0
APP_ENV=development
APP_PORT=8000
APP_HOST=0.0.0.0
APP_DEBUG=true

# Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=medical_aesthetics

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

TIMESCALE_URL=postgresql://postgres:password@localhost:5432/medical_aesthetics
TIMESCALE_SSL=false

ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key

# HIPAA Compliance
HIPAA_AUDIT_LOG_RETENTION_DAYS=2555
HIPAA_DATA_ANONYMIZATION_STRATEGY=pseudonymization
HIPAA_ENCRYPTION_KEY=your-hipaa-encryption-key

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# NLP Configuration
OPENAI_API_KEY=your-openai-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key
SPACY_MODEL=en_core_web_sm

# Browser Configuration
BROWSERLESS_URL=http://localhost:3000
BROWSERLESS_TOKEN=your-browserless-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_MONITORING=true
ENABLE_TRACING=true
ENABLE_METRICS=true
ENABLE_LOGGING=true